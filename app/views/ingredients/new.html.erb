<h1 align="center">create new ingredient</h1>
<% if @ingredient.errors.any? %>

  <h2>Errors:</h2>
  <%= @ingredient.errors.full_messages %>
<% end %> 

<%= form_with model: @ingredient do |f| %>
<div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :name, "ingredient name"%>
        </div>
        <div class="col-md-8">
          <%= f.text_field :name, class: "form-control",  placeholder: "Name of recipe", autofocus: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit "add ingredient", class: "btn btn-primary btn-lg" %>
        </div>
      </div> 
  </div>

<%end%>
<h1>signup page</h1>

<h1 align="center">create new dish</h1>
<% if @chef.errors.any? %>

  <h2>Errors:</h2>
  <%= @chef.errors.full_messages %>
<% end %> 

<%= form_with model: @chef do |f| %>
<div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :chefname %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :chefname, class: "form-control",  placeholder: "Name of recipe", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :email %>
        </div>
        <div class="col-md-8">
          <%= f.email_field :email, class: "form-control",  placeholder: "Enter steps to create recipe" %>
        </div>
      </div>


      <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :password %>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password, class: "form-control",  placeholder: "Enter steps to create recipe" %>
      </div>
      </div>

        <div class="form-group">
      <div class="control-label col-md-2">
        <%= f.label :password_conformation, "confirm password"%>
      </div>
      <div class="col-md-8">
        <%= f.password_field :password_cconformation, class: "form-control",  placeholder: "Enter steps to create recipe" %>
      </div>
      </div>

      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit "create my account", class: "btn btn-primary btn-lg" %>
        </div>
      </div> 
  </div>

<%end%>


